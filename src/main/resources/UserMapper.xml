<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace：命名空间，用于隔离sql和匹配接口 -->
<mapper namespace="mapper.UserMapper">
    <select id="findbyid" parameterType="int" resultType="pojo.UserTable">
        select  * from user_table where user_id=#{id};
    </select>
    <select id="findbyname" parameterType="String" resultType="pojo.UserTable">
        select  * from user_table where user_name like "%"#{value}"%";
    </select>
    <insert id="insert" parameterType="pojo.UserTable">
        insert into user_table(user_id, user_name,user_pwd,user_age) values (null,#{user_name},#{user_pwd},#{user_age});
    </insert>
    <delete id="delete" parameterType="int">
        delete from user_table where user_id=#{id};
    </delete>
    <update id="update" parameterType="pojo.UserTable">
     update user_table set user_name=#{user_name} where user_id=#{user_id};
    </update>
<!--    插入后立即获得id-->
    <insert id="insert1" parameterType="pojo.UserTable" useGeneratedKeys="true" keyProperty="user_id">
        insert into user_table(user_id, user_name,user_pwd,user_age) values (null,#{user_name},#{user_pwd},#{user_age});
    </insert>
</mapper>